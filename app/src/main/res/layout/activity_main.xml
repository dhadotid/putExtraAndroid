<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rsypj.latihanputextra.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Masukkan Nama Anda"
        android:id="@+id/main_activity_etNama"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_etNama"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/main_activity_etEmail"
        android:hint="Masukkan Email"
        android:layout_marginTop="10dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_activity_etEmail"
        android:layout_centerInParent="true"
        android:text="Kirim"
        android:id="@+id/main_activity_btnKirim"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"/>

</RelativeLayout>
